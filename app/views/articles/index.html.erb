<body class="bg-white overflow-hidden">
  <div class="h-screen">
    <div>
      <%= render "nav", article: @article %>
    </div>
    <div class="flex h-full">
      <div class="w-1/3 bg-gray-700"></div>
      <div class="w-1/3 bg-gray-400">
        <div class="div-1 m-16">
          <p class="text-2xl">Our blog has <%= Article.public_count %> articles and counting! </p>
        </div >
        <div class="div-1 m-16">
          
          <ul>
            <p class="text-2xl">List of articles:</p>
            <% @articles.each do |article| %>
              <% unless article.archived? %>
                <li class="m-4 p-2 border border-yellow-400 bg-yellow-400 text-center">
                  <%= link_to article.title, article %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
        
        <div class="div-1 m-5">
        <ul>
          <p class="text-2xl text-center my-4">List of actions:</p>
          <li>
            <%= link_to "New Article", new_article_path, class:"text-black border border-black py-2 px-5 m-4 rounded-md bg-yellow-400"%>
          </li>
        </ul>
        
         </div>
      </div>

      <div class="w-1/3 bg-gray-700"></div>
    </div>
  </div>
  
</body>
