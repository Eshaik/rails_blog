<body class="bg-white">
  <div class="h-screen">
    <div>
      <%= render "nav", article: @article %>
    </div>
    <div class="flex h-full">
      <div class="w-1/3 bg-gray-700"></div>

      <div class="w-1/3 bg-gray-400">
        <div>
          <%= link_to root_path do %>
            <img src="https://img.icons8.com/material-outlined/48/000000/back--v1.png"/>
          <% end %>
          <h1 class="text-5xl m-6" >Title: <%= @article.title %></h1>
          <p class="text-3xl m-6"> Description: <br><%= @article.body %></p>  
        </div>
        <div class="flex justify-center">
          <ul class="flex ">
            <li class="btn-1 "><%= link_to "Edit", edit_article_path(@article) %></li>
            <li class="btn-1"><%= link_to "Destroy", article_path(@article),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %></li>
          </ul>
        </div>
        
        <div>
          
          <%= render @article.comments %>

          <h2 class="text-2xl m-6">Add a comment: </h2>
          <%= render 'comments/form' %>
        </div>
        
      </div>
    
      <div class="w-1/3 bg-gray-700"></div>  
    </div>
    
  </div>
</body>
