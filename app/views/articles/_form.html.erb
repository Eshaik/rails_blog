<body class="bg-white overflow-hidden">
  
  <div class="h-screen">
    <div>
      <%= render "nav", article: @article %>
    </div>
    <div class="flex h-full">
      <div class="w-1/3 bg-gray-700"></div>

      <div class="w-1/3 bg-gray-400">
        <%= link_to root_path do %>
          <img src="https://img.icons8.com/material-outlined/48/000000/back--v1.png"/>
        <% end %>
        <h1 class="text-5xl text-center">New Article</h1>

        <%= form_with model: article do |form| %>
          <div class="m-6">
            <p class="">
              <%= form.label :title %><br>
              <%= form.text_field :title %> 
            </p>
            <% article.errors.full_messages_for(:title).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div class="m-6">
            <%= form.label :body %><br>
            <%= form.text_area :body %><br>
            <% article.errors.full_messages_for(:body).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
            
          <div class="m-6">
            <%= form.label :status %><%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
          </div>

          <div class="flex justify-center">
            <%= form.submit class:"text-black border border-black py-2 px-3 m-6 rounded-lg bg-yellow-400 text-center w-40"%>
          </div>
        <% end %>
    </div>

    <div class="w-1/3 bg-gray-700"></div>

    </div>
    
  </div>
</body>
