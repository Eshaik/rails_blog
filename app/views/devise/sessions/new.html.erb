<body class="bg-success" style="overflow: hidden;">
  <div class="d-flex" style="width: 100%">
    <div class="div-index"></div>

    <div class="div-indexm">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row justify-content-center">
          <div class="col-md-12 col-sm-12">
              <div class="card shadow-lg border-0 rounded-lg mt-5 mx-auto" >

                <%= link_to root_path do %>
                  <img src="https://img.icons8.com/ios-filled/50/000000/back.png"/>
                <% end %>

                <div class="row text-center my-3">

                  <h2> Log in</h2>

                  <div class="my-3" >
                    <i class="fas fa-user"> </i>
                    <%= f.text_field :login, autofocus: true, placeholder: "Enter your user/email", :size=>"16"%>
                  </div>

                  <div class="my-3">
                    <i class="fas fa-lock"></i>
                    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter your password", :size=>"16" %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="mt-2">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>

                  <div class="actions">
                    <%= f.submit "Log in", class:"btn btn-success m-3" %>
                  </div>
                  
                  <%= render "devise/shared/links" %>

                  <%= render 'layouts/messages' %>
                  
                </div>  
              </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="div-index"></div>
  </div>
</body>
