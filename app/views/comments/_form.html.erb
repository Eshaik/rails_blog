<div>
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <p class="m-6">
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter %>
    </p>
    <p class="m-6">
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>

    <p class="m-6">
      <%= form.label :status %>
      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public', class:"rounded-lg"%>
    </p>

    <p>
      <%= form.submit class:"text-black border border-black py-2 px-3 m-6 rounded-lg bg-yellow-400 text-center w-40"%>
    </p>
  <% end %>
</div>
