<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="m-0 p-2 row justify-content-center">
      <div class="card col-auto text-center" style="width: 40rem">
        
          <div class="card-body" >
          <p>
            <%= form.label :commenter %><br><%= form.text_field :commenter, size:'15' %>
          </p>
          <p>
            <%= form.label :body %><br>
            <%= form.text_area :body, class:'txt-cm' %>
          </p>
          <p >
            <%= form.label :status %><br>
            <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
          </p>
          <input type="submit" value="Create comment" class="btn btn-success mb-3">
        </div>
        
      </div>  
    </div>
  </div>
<% end %>
